<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent" android:layout_height="match_parent"
  tools:context=".activity.SplashActivity" android:background="@color/dark_slate_gray">

  <ImageView android:id="@+id/logo_id" android:layout_width="300dp"
    android:layout_height="150dp" android:src="@drawable/rakuten_transparent"
    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toTopOf="parent" />

  <ProgressBar android:id="@+id/progressBar" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:layout_marginTop="8dp"
    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/logo_id" tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>